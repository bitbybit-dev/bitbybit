{
    "name": "basic",
    "version": "1.0.0",
    "description": "Example of how to use @bitbybit-dev/occt within node",
    "main": "index.js",
    "scripts": {
        "build": "npx tsc",
        "start": "node --experimental-specifier-resolution=node dist/index.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon --experimental-specifier-resolution=node -q dist/index.js\""
    },
    "author": "Bit By Bit Developers",
    "license": "MIT",
    "type": "module",
    "dependencies": {
        "@bitbybit-dev/occt": "^0.20.4"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "nodemon": "^2.0.20",
        "typescript": "^4.9.4"
    }
}